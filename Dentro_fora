Algoritmo "DentroFora"

Var

   n, x, fora, dentro, i : inteiro

Inicio


    escreva("Quantos numeros voce vai digitar? ")
    leia(n)

    para i de 1 ate n faca
       escreva("Digite um numero: ")
       leia(x)
       se (x < 10) ou ( x > 20) entao
          fora <- fora + 1
       senao
          dentro <- dentro + 1
       fimse
    fimpara

    escreval(dentro, " DENTRO")
    escreval(fora, " FORA")

Fimalgoritmo

-------------------------------------

Algoritmo "DentroFora"

Var

   n, x, fora, dentro, i : inteiro

Inicio


    escreva("Quantos numeros voce vai digitar? ")
    leia(n)

    repita i
       escreva("Digite um numero: ")
       leia(x)
       i <- i + 1
       se (x < 10) ou ( x > 20) entao
          fora <- fora + 1
       senao
          dentro <- dentro + 1
       fimse
    ate i = n

    escreval(dentro, " DENTRO")
    escreval(fora, " FORA")

Fimalgoritmo



