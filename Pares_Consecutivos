Algoritmo "pares consecutivos"

Var

   x, soma : inteiro
   
Inicio
x <- 0

      escreva("Digite um numero inteiro: ")
      leia(x)
      
   enquanto x <> 0 faca
      se x mod 2 <> 0 entao
         x <- x + 1
         soma <- 5 * x + 20
         escreval("SOMA = ", soma)
      senao
         soma <- 5 * x + 20
         escreval("SOMA = ", soma)
      fimse
      escreva("Digite um numero inteiro: ")
      leia(x)
   fimenquanto

   Fimalgoritmo
