Algoritmo "Dardos"


Var

   d1, d2, d3, dm : real
   
Inicio

   escreval("Digite as tres distancias: ")
   leia(d1)
   leia(d2)
   leia(d3)
   
   se (d1 >= d2) e (d1 >= d3) entao
      dm <- d1
   senao
      se d2 >= d3 entao
         dm <- d2
      senao
         dm <- d3
      fimse
   fimse
   
   escreval("MAIOR DISTANCIA = ", dm:1:2)

fimalgoritmo
