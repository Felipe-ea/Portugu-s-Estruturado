Algoritmo "parImpar"

Var

   N, x, i : inteiro

Inicio


    escreva("Quantos numeros voce vai digitar? ")
    leia(N)

    repita i
       escreva("Digite um numero: ")
       leia(x)
       se (x > 0) e (x mod 2 = 0) entao
          escreval("PAR POSITIVO")
       senao
          se (x > 0) e (x mod 2 <> 0) entao
             escreval("IMPAR POSITIVO")
          senao
             se (x < 0) e (x mod 2 = 0) entao
                escreval("PAR NEGATIVO")
             senao
                se (x < 0) e (x mod 2 <> 0) entao
                   escreval("IMPAR NEGATIVO")
                senao
                   escreval("NULO")
                fimse
             fimse
          fimse
       fimse
    i <- i + 1
    ate i = n
Fimalgoritmo
